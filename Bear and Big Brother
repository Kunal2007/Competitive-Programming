#include<iostream>
using namespace std;

int main(){
	int a, b;
	cin>>a; //weight of Limak
	cin>>b; //weight of Limak's brother Bob.
	// Every year Limak triples his weight and his brother Bob doubles his weight. We need to find the minimum number of years after which Limak has weight strictly greater than his brother.
	int years=0;
	while(a <= b){ //while weight of Limak is less than or equal to his brother's weight.
		a=a*3;
		b=b*2;
		years++; //incrementing the number of years.
	}
	cout<<years<<endl;
}
